            </directory>
            <outputDirectory>./conf</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>755</fileMode>
            <includes>
                <include>dsp-auth-server.properties</include>
                <include>ehcache.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/baymax-dsp/baymax-dsp-job/baymax-dsp-job-exec/src/main/resources
            </directory>
            <outputDirectory>./conf</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>755</fileMode>
            <includes>
