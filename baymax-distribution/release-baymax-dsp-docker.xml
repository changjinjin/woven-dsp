<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>release-baymax-dsp-docker</id>
    <formats>
        <format>dir</format>
        <!-- <format>tar.gz</format> -->
        <!-- <format>zip</format> -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/conf</directory>
            <outputDirectory>./conf</outputDirectory>
            <includes>
                <include>*.xml</include>
                <include>quartz.properties</include>
            </includes>
        </fileSet>
		<fileSet>
			<directory>${project.basedir}/k8s</directory>
			<outputDirectory>./k8s</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>./</outputDirectory>
			<directoryMode>644</directoryMode>
			<fileMode>644</fileMode>
			<includes>
				<include>NOTICE</include>
				<include>LICENSE</include>
				<include>*.md</include>
			</includes>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-access/baymax-dsp-access-consumer/src/main/resources/dsp-access-consumer.properties
			</directory>
			<destName>dsp-access-consumer-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-access/baymax-dsp-access-dataapi/src/main/resources/dsp-access-dataapi.properties
			</directory>
			<destName>dsp-access-dataapi-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-access/baymax-dsp-access-platform/src/main/resources/dsp-access-platform.properties
			</directory>
			<destName>dsp-access-platform-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-security/baymax-security-oauth/baymax-security-oauth-server/src/main/resources/dsp-auth-server.properties
			</directory>
			<destName>dsp-auth-server-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-job/baymax-dsp-job-exec/src/main/resources/dsp-job-exec.properties
			</directory>
			<destName>dsp-job-exec-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-job/baymax-dsp-job-schedule/src/main/resources/dsp-job-schedule.properties
			</directory>
			<destName>dsp-job-schedule-dev.properties</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>${project.parent.basedir}/baymax-dsp/baymax-dsp-gateway/src/main/resources/dsp-gateway.yaml
			</directory>
			<destName>dsp-gateway-dev.yaml</destName>
		</file>
		<file>
			<outputDirectory>./dsp</outputDirectory>
			<directory>
				${project.parent.basedir}/baymax-dsp/baymax-dsp-cas-gateway/src/main/resources/dsp-cas-gateway.yaml
			</directory>
			<destName>dsp-cas-gateway-dev.yaml</destName>
		</file>
	</files>
</assembly>
